<p id="notice"><%= notice %></p>

<h1>Listing Simulations</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @simulations.each do |simulation| %>
      <tr>
        <td><%= simulation.user.name %></td>
        <td><%= link_to 'Show', simulation, :class => 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Edit', edit_simulation_path(simulation), :class => 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Destroy', simulation, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_simulation_path,
            :class => 'btn btn-primary' %>